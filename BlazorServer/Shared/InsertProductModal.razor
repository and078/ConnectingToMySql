@using BlazorServer.Models

<div class="simple-form">

    <div class="form-group">
        <label for="name">Name</label>
        <input @bind="product.name" type="text" class="form-control" id="name" placeholder="Enter name" />
    </div>

    <div class="form-group">
        <label for="email">Phone</label>
        <input @bind="product.description" type="text" class="form-control" id="description" placeholder="Enter description" />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input @bind="product.price" type="text" class="form-control" id="price" placeholder="Enter price" />
    </div>

    <button @onclick="SubmitForm" class="btn btn-outline-dark">Submit</button>
    <button @onclick="Cancel" class="btn btn-secondary">Cancel</button>
</div>

@code {

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    ProductModel product = new();

    protected override void OnInitialized() => BlazoredModal.SetTitle("Enter Data");

    async Task SubmitForm() => await BlazoredModal.CloseAsync(ModalResult.Ok<ProductModel>(product));
    async Task Cancel() => await BlazoredModal.CancelAsync();

}

